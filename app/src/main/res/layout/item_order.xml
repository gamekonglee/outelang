<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="80dp"
              android:background="@color/white">
    <ImageView
        android:id="@+id/product_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_margin="13dp"
        android:background="@drawable/search_et_shap"
        android:padding="1dp" />
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/product_iv"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/product_iv"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@android:color/black"
        android:text="WL0024-2"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/priceName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name_tv"
        android:layout_below="@id/name_tv"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:text="价格:   "
        android:textSize="15sp" />
    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/priceName_tv"
        android:layout_toRightOf="@id/priceName_tv"
        android:ellipsize="end"
        android:text="0.00"
        android:textColor="@color/red"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/price_util"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/price_tv"
        android:layout_toRightOf="@id/price_tv"
        android:ellipsize="end"
        android:text=" 元"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/price_tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/agioName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/price_util"
        android:layout_toRightOf="@id/price_util"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="折..."/>
    <TextView
        android:id="@+id/agiotv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/agioName"
        android:layout_toRightOf="@id/agioName"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        />

</RelativeLayout>